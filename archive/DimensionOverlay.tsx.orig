            >
              <View className="flex-row items-center justify-center">
                <Ionicons 
                  name="create-outline" 
                  size={14} 
                  color={measurementMode ? '#34C759' : 'rgba(0, 0, 0, 0.45)'} 
                />
                <Text style={{
                  marginLeft: 4,
                  fontWeight: '600',
                  fontSize: 12,
                  color: measurementMode ? '#34C759' : 'rgba(0, 0, 0, 0.45)'
