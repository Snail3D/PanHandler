                    {/* P2 glow layers */}
                    <Circle cx={p2.x} cy={p2.y} r="6" fill={color.glow} opacity="0.05" />
                    <Circle cx={p2.x} cy={p2.y} r="5" fill={color.glow} opacity="0.075" />
