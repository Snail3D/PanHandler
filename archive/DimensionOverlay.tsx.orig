              >
                <Text style={{ color: 'white', fontSize: 13, fontWeight: '600' }}>
                  {currentLabel || 'PanHandler Measurements'}
                </Text>
              </View>
              
              {/* Coin reference info */}
              {calibration && coinCircle && (
                <View
                  style={{
                    backgroundColor: 'rgba(0, 0, 0, 0.7)',
                    paddingHorizontal: 8,
                    paddingVertical: 4,
                    borderRadius: 5,
                  }}
                >
                  <Text style={{ color: '#A0A0A0', fontSize: 10, fontWeight: '500' }}>
